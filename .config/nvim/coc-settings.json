{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },
  "languageserver": {
		"terraform": {
			"command": "terraform-ls",
			"args": ["serve"],
			"filetypes": [
				"terraform",
				"tf"
			],
			"initializationOptions": {},
			"settings": {}
		}
	},
  "coc.preferences.formatOnSaveFiletypes": ["py", "css", "Markdown", "yaml"],
	"python.linting.flake8Enabled": true,
	"python.formatting.provider": "black"
}
